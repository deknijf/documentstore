APP_NAME=Document Store
API_HOST=0.0.0.0
API_PORT=8000

# Environment: development | production
ENVIRONMENT=development

# Session TTL in days
SESSION_TTL_DAYS=30

# Public base URL (used for password-reset links, etc.)
# Example (production): https://docstore.deknijf.eu
PUBLIC_BASE_URL=http://localhost:8000

# Version metadata (stored in DB as schema/app info)
# Usually equals the git tag without the leading "v".
VERSION=0.6.2
APP_VERSION=${VERSION}
GIT_TAG=v${VERSION}

# Reverse proxy / security
# Comma-separated allowed Host header values. Recommended in production.
# Example: docstore.deknijf.eu
ALLOWED_HOSTS=localhost,127.0.0.1
# Optional CIDR ranges for LAN testing in development.
# Example: 10.10.1.0/24
ALLOWED_HOST_CIDRS=

# CORS allow origins (only needed if frontend runs on a different origin).
# Example: https://docstore.deknijf.eu
#CORS_ALLOW_ORIGINS=https://docstore.deknijf.eu

# Trust X-Forwarded-* headers from a reverse proxy (nginx/traefik/caddy).
# Set to true in production behind a proxy so scheme/host are correct.
TRUST_PROXY_HEADERS=false

DATA_DIR=data
UPLOADS_DIR=data/uploads
THUMBNAILS_DIR=data/thumbnails
SQLITE_PATH=data/documentstore.db

OCR_PROVIDER=textract

# AI provider - options "openrouter", "openai", "google"
AI_PROVIDER=openrouter

AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OpenRouter (https://openrouter.ai)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_OCR_MODEL=openai/gpt-4o-mini

# OpenAI (https://platform.openai.com)
#OPENAI_API_KEY=
#OPENAI_MODEL=gpt-4o-mini
#OPENAI_OCR_MODEL=gpt-4o-mini

# Google Gemini (https://aistudio.google.com / Google AI API)
#GOOGLE_API_KEY=
#GOOGLE_MODEL=gemini-1.5-flash
#GOOGLE_OCR_MODEL=gemini-1.5-flash

# VDK bank (read-only)
#VDK_BASE_URL=
#VDK_CLIENT_ID=
#VDK_API_KEY=
#VDK_PASSWORD=

# KBC bank (read-only)
#KBC_BASE_URL=
#KBC_CLIENT_ID=
#KBC_API_KEY=
#KBC_PASSWORD=

# BNP Paribas Fortis bank (read-only)
#BNP_BASE_URL=
#BNP_CLIENT_ID=
#BNP_API_KEY=
#BNP_PASSWORD=

# Active bank provider for Bank tab sync: vdk | kbc | bnp
BANK_PROVIDER=vdk
VDK_XS2A=false
BNP_XS2A=false
KBC_XS2A=false

# Mail ingest (IMAP) - read-only mailbox scan for document attachments
MAIL_INGEST_ENABLED=false
MAIL_IMAP_HOST=imap.gmail.com
MAIL_IMAP_PORT=993
MAIL_IMAP_USERNAME=
MAIL_IMAP_PASSWORD=
MAIL_IMAP_FOLDER=INBOX
MAIL_IMAP_USE_SSL=true
MAIL_INGEST_FREQUENCY_MINUTES=0
MAIL_INGEST_GROUP_ID=
MAIL_INGEST_ATTACHMENT_TYPES=pdf
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SENDER_EMAIL=docstore@deknijf.eu

INTEGRATION_MASTER_KEY=change-this-in-production
ADMIN_DEFAULT_PASSWORD=admin
